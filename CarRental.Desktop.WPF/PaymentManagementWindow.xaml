<Window x:Class="CarRental.Desktop.WPF.PaymentManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarRental.Desktop.WPF"
        mc:Ignorable="d"
        Title="Gestion des Paiements" 
        Height="800" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI">

    

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Gestion et Enregistrement des Paiements" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Margin="0,0,0,25"
                   Foreground="#007ACC"
                   HorizontalAlignment="Center"/>

        <Border Grid.Row="1" 
                BorderBrush="#2ECC71" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="20" 
                Background="#F0FFF0" 
                Margin="0,0,0,20">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,20,0">

                    <TextBlock Text="Sélectionner le Client :" Margin="0,0,0,2" FontWeight="SemiBold"/>
                    <ComboBox x:Name="cmbClient"
                              ItemsSource="{Binding AvailableClients}"
                              SelectedValuePath="ClientId"
                              SelectionChanged="CmbClient_SelectionChanged"
                              Margin="0,0,0,15" Padding="5"
                              ToolTip="Filtre les réservations pour n'afficher que celles de ce client.">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <Run Text="{Binding LastName, Mode=OneWay, StringFormat='{} {0}'}"/>
                                    <Run Text="{Binding FirstName, Mode=OneWay, StringFormat=' \{0\}'}"/>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <TextBlock Text="Sélectionner la Réservation :" Margin="0,0,0,2" FontWeight="SemiBold"/>
                    <ComboBox x:Name="cmbReservation" 
                              ItemsSource="{Binding FilteredReservations}"
                              SelectedValuePath="ReservationId"
                              Margin="0,0,0,15" Padding="5"
                              SelectionChanged="CmbReservation_SelectionChanged"
                              ToolTip="Sélectionnez la réservation à laquelle ce paiement est lié.">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <Run Text="{Binding ReservationId}"/>
                                    <Run Text=" - Du "/>
                                    <Run Text="{Binding RequestedStart, StringFormat='d'}"/>
                                    <Run Text=" au "/>
                                    <Run Text="{Binding RequestedEnd, StringFormat='d'}"/>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Montant du Paiement (€) :" Margin="0,0,0,2" FontWeight="SemiBold"/>
                            <TextBox x:Name="txtAmount" Padding="5" Background="White" ToolTip="Montant à enregistrer. Suggère le solde restant si une réservation est sélectionnée."/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="Méthode de Paiement :" Margin="0,0,0,2" FontWeight="SemiBold"/>
                            <ComboBox x:Name="cmbPaymentMethod" 
                                      Margin="0,0,0,20" Padding="5"
                                      ToolTip="Carte, Cash, Virement, etc."/>
                        </StackPanel>
                    </Grid>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button x:Name="BtnRecordPayment" 
                                Content="💵 Enregistrer le Paiement" 
                                Click="BtnRecordPayment_Click"
                                Background="#2ECC71" Foreground="White" 
                                Padding="15,8" FontWeight="Bold"/>

                        <Button x:Name="BtnClearForm" 
                                Content="🗑️ Effacer/Nouveau" 
                                Click="BtnClearForm_Click"
                                Margin="10,0,0,0"
                                Background="#9E9E9E" Foreground="White" 
                                Padding="15,8" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>

                <Rectangle Grid.Column="1" Width="1" Fill="#CCCCCC" Margin="10,0"/>

                <StackPanel Grid.Column="2" Margin="20,0,0,0">
                    <TextBlock Text="Synthèse de la Réservation Sélectionnée" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Montant Total (Réservation) :" FontWeight="SemiBold" Margin="0,0,10,0"/>
                        <TextBlock Grid.Column="1" x:Name="txtTotalAmountDue" Text="N/A" FontWeight="Bold" Foreground="#34495E"/>
                    </Grid>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Total Déjà Payé :" FontWeight="SemiBold" Margin="0,0,10,0"/>
                        <TextBlock Grid.Column="1" x:Name="txtTotalPaid" Text="N/A" Foreground="#27AE60"/>
                    </Grid>

                    <Separator Margin="0,10"/>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Solde à Payer/Rembourser :" FontWeight="Bold" Margin="0,0,10,0"/>
                        <TextBlock Grid.Column="1" x:Name="txtBalance" Text="N/A" FontSize="18" FontWeight="ExtraBold" Foreground="#E74C3C"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            
        </StackPanel>

        <TextBlock Grid.Row="3" 
                   Text="Historique des Paiements Enregistrés" 
                   FontSize="18" 
                   FontWeight="SemiBold" 
                   Margin="0,10,0,10"
                   Foreground="#007ACC"/>

        <DataGrid Grid.Row="3" 
                  x:Name="dgvPayments"
                  ItemsSource="{Binding Payments}"
                  IsReadOnly="True"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  Background="#FFFFFF"
                  BorderBrush="#CCCCCC"
                  BorderThickness="1"
                  SelectionChanged="DgvPayments_SelectionChanged">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Paiement ID (Partiel)" 
                    Binding="{Binding PaymentId}" 
                    Width="150"/>

                <DataGridTextColumn Header="Réservation ID (Partiel)" 
                    Binding="{Binding ReservationId}" 
                    Width="150"/>
                <DataGridTextColumn Header="Montant (€)" Binding="{Binding Amount, StringFormat=\{0:N2\}}" Width="120"/>
                <DataGridTextColumn Header="Date" Binding="{Binding PaymentDate, StringFormat=\{0:dd/MM/yyyy HH:mm\}}" Width="160"/>
                <DataGridTextColumn Header="Méthode" Binding="{Binding PaymentMethod}" Width="120"/>
                <DataGridTextColumn Header="Statut" Binding="{Binding Status}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
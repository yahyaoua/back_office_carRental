<Window x:Class="CarRental.Desktop.WPF.MaintenanceManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:system="clr-namespace:System;assembly=mscorlib" 
        
        mc:Ignorable="d"
        Title="Gestion des Maintenances (Back-Office)" 
        Height="800" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Gestion et Planification des Maintenances" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Margin="0,0,0,25"
                   Foreground="#800080"
                   HorizontalAlignment="Center"/>

        <Border Grid.Row="1"
                BorderBrush="#800080" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="20" 
                Background="#F8F0F8" 
                Margin="0,0,0,20">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <TextBlock Text="Sélectionner le Véhicule :" Margin="0,0,0,2" FontWeight="SemiBold"/>
                    <ComboBox x:Name="cmbVehicle" 
                              ItemsSource="{Binding AvailableVehicles}"
                              SelectedValuePath="VehicleId"
                              Margin="0,0,0,15" Padding="5"
                              SelectionChanged="CmbVehicle_SelectionChanged"
                              ToolTip="Sélectionnez le véhicule pour planifier ou vérifier la maintenance.">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <Run Text="{Binding PlateNumber}"/>
                                    <Run Text=" - "/>
                                    <Run Text="{Binding Model}"/>
                                    <Run Text=" ("/>
                                    <Run Text="{Binding Status}"/>
                                    <Run Text=")"/>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Type de Maintenance :" Margin="0,0,0,2" FontWeight="SemiBold"/>
                            <TextBox x:Name="txtMaintenanceType" Padding="5" Background="White" ToolTip="Ex: Vidange, Pneus, Inspection majeure."/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="Date Prévue :" Margin="0,0,0,2" FontWeight="SemiBold"/>
                            <DatePicker x:Name="dpScheduledDate" 
                                        Margin="0,0,0,20" Padding="5"
                                        ToolTip="Date à laquelle l'entretien doit avoir lieu."/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Notes / Détails de l'Intervention :" Margin="0,0,0,2" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtNotes" Padding="5" Background="White" Height="50" Margin="0,0,0,15"
                             TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

                    <Button x:Name="BtnScheduleMaintenance" 
                            Content="📅 Planifier la Maintenance" 
                            Click="BtnScheduleMaintenance_Click"
                            Background="#800080" Foreground="White" 
                            Padding="15,8" FontWeight="Bold"/>
                </StackPanel>

                <Rectangle Grid.Column="1" Width="1" Fill="#CCCCCC" Margin="10,0"/>

                <StackPanel Grid.Column="2" Margin="20,0,0,0">
                    <TextBlock Text="Maintenance Active (Véhicule Sélectionné)" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Statut Actuel du Véhicule :" FontWeight="SemiBold" Margin="0,0,10,0"/>
                        <TextBlock Grid.Column="1" x:Name="txtVehicleStatus" Text="Non Sélectionné" FontWeight="Bold" Foreground="#34495E"/>
                    </Grid>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Maintenance Active (ID) :" FontWeight="SemiBold" Margin="0,0,10,0"/>
                        <TextBlock Grid.Column="1" x:Name="txtCurrentMaintenanceId" Text="Aucune" Foreground="#E74C3C"/>
                    </Grid>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Type Prévu :" FontWeight="SemiBold" Margin="0,0,10,0"/>
                        <TextBlock Grid.Column="1" x:Name="txtCurrentMaintenanceType" Text="N/A" Foreground="#E74C3C"/>
                    </Grid>

                    <Separator Margin="0,15"/>

                    <Button x:Name="BtnMarkReady" 
                            Content="✅ Marquer comme Prêt (Available)" 
                            Click="BtnMarkReady_Click"
                            Background="#2ECC71" Foreground="White" 
                            Padding="15,8" FontWeight="Bold"
                            IsEnabled="False"
                            ToolTip="Finalise la maintenance active et remet le véhicule en statut 'Available'."/>
                </StackPanel>
            </Grid>
        </Border>

        <TextBlock Grid.Row="2" 
                   Text="Historique des Maintenances Enregistrées" 
                   FontSize="18" 
                   FontWeight="SemiBold" 
                   Margin="0,10,0,10"
                   Foreground="#800080"/>

        <DataGrid Grid.Row="2" 
                  x:Name="dgvMaintenanceHistory"
                  ItemsSource="{Binding MaintenanceHistory}"
                  IsReadOnly="True"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  HeadersVisibility="Column">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID (Partiel)" Binding="{Binding MaintenanceIdShort}" Width="120"/>

                <DataGridTextColumn Header="Véhicule (Plaque)" Binding="{Binding Vehicle.PlateNumber}" Width="150"/>

                <DataGridTextColumn Header="Date Prévue" Binding="{Binding ScheduledDate, StringFormat=\{0:dd/MM/yyyy\}}" Width="120"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="150"/>
                <DataGridTextColumn Header="Statut" Binding="{Binding Status}" Width="100"/>
                <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
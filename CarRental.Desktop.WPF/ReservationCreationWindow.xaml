<Window x:Class="CarRental.Desktop.WPF.ReservationCreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Gestion des Réservations" 
        Height="800"
        Width="650"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Gestion des Réservations" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"
                   Foreground="#007ACC"
                   HorizontalAlignment="Center"/>

        <Border Grid.Row="1" 
                BorderBrush="#007ACC" 
                BorderThickness="1" 
                CornerRadius="8" 
                Padding="20" 
                Background="#E6F0FF" 
                Margin="0,0,0,20">

            <StackPanel>
                <TextBlock Text="Client (Sélection) :" Margin="0,5,0,2" FontWeight="SemiBold"/>
                <ComboBox x:Name="cmbClient" 
                          ItemsSource="{Binding AvailableClients}"
                          SelectedValuePath="ClientId"
                          Margin="0,0,0,10" Padding="5">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <Run Text="{Binding LastName, Mode=OneWay}"/>
                                <Run Text=" "/>
                                <Run Text="{Binding FirstName, Mode=OneWay}"/>
                            </TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock Text="Véhicule (Sélection) :" Margin="0,5,0,2" FontWeight="SemiBold"/>
                <ComboBox x:Name="cmbVehicle" 
                          ItemsSource="{Binding AvailableVehicles}"
                          SelectedValuePath="VehicleId"
                          Margin="0,0,0,10" Padding="5"
                          SelectionChanged="CmbVehicle_SelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <Run Text="{Binding PlateNumber, Mode=OneWay}"/>
                                <Run Text=" - "/>
                                <Run Text="{Binding Make, Mode=OneWay}"/>
                                <Run Text=" "/>
                                <Run Text="{Binding Model, Mode=OneWay}"/>
                                <Run Text=" (€ "/>
                                <Run Text="{Binding BaseRatePerDay, StringFormat='F2'}"/>
                                <Run Text="/jour)"/>
                            </TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <Grid Margin="0,5,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Date de Début Demandée :" Margin="0,0,0,2" FontWeight="SemiBold"/>
                        <DatePicker x:Name="dpStartDate" Padding="5" SelectedDateChanged="DpDate_SelectedDateChanged"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="Date de Fin Demandée :" Margin="0,0,0,2" FontWeight="SemiBold"/>
                        <DatePicker x:Name="dpEndDate" Padding="5" SelectedDateChanged="DpDate_SelectedDateChanged"/>
                    </StackPanel>
                </Grid>

                <Grid Margin="0,5,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Montant Total (€) (TotalAmount) :" Margin="0,5,0,2" FontWeight="SemiBold"/>
                        <TextBox x:Name="txtTotalCost" 
                                 Padding="5" 
                                 Background="#FFFACD" 
                                 IsReadOnly="True"
                                 ToolTip="Montant total de la réservation (calculé automatiquement)."/>
                    </StackPanel>

                </Grid>

            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Button x:Name="BtnCreateReservation" 
                    Content="✅ Créer" 
                    Click="BtnCreateReservation_Click"
                    Background="#4CAF50" Foreground="White" 
                    Padding="15,8" Margin="10,5" FontWeight="Bold" Width="100"/>

            <Button x:Name="BtnUpdateReservation" 
                    Content="📝 Modifier" 
                    Click="BtnUpdateReservation_Click"
                    Background="#FFC107" Foreground="Black" 
                    Padding="15,8" Margin="10,5" FontWeight="Bold" Width="100"/>

            <Button x:Name="BtnDeleteReservation" 
                    Content="❌ Supprimer" 
                    Click="BtnDeleteReservation_Click"
                    Background="#F44336" Foreground="White" 
                    Padding="15,8" Margin="10,5" FontWeight="Bold" Width="100"/>

            <Button x:Name="BtnClear" 
                    Content="🗑️ Effacer" 
                    Click="BtnClear_Click"
                    Background="#9E9E9E" Foreground="White" 
                    Padding="15,8" Margin="10,5" FontWeight="Bold" Width="100"/>
        </StackPanel>

        <TextBlock Grid.Row="3" 
                   Text="Réservations Actives" 
                   FontSize="16" 
                   FontWeight="SemiBold" 
                   Margin="0,0,0,10"
                   Foreground="#007ACC"/>
        <DataGrid Grid.Row="3" 
                  x:Name="dgvActiveReservations"
                  ItemsSource="{Binding ActiveReservations}"
                  IsReadOnly="True"
                  AutoGenerateColumns="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  Background="#F0F8FF"
                  BorderBrush="#CCCCCC"
                  BorderThickness="1"
                  SelectionMode="Single"
                  SelectionChanged="DgvActiveReservations_SelectionChanged"
                  AutoGeneratingColumn="DgvActiveReservations_AutoGeneratingColumn"/>
    </Grid>
</Window>
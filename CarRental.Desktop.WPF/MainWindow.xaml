<Window x:Class="CarRental.Desktop.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:local="clr-namespace:CarRental.Desktop.WPF"
        Title="CarRental Desktop Application" 
        Height="700" 
        Width="1000"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005C99"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D0D0D0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#DC3545"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C82333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,30,0">

            <TextBlock Text="Menu Principal" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Margin="0,0,0,15"
                       Foreground="#007ACC"/>

            <GroupBox Header="Opérations Quotidiennes" Margin="0,10,0,10" BorderBrush="#007ACC" FontWeight="SemiBold">
                <StackPanel Orientation="Vertical" Margin="10">

                    <Button Content="Créer Nouvelle Réservation" 
                            x:Name="BtnOpenReservationCreation"
                            Height="35" 
                            Style="{StaticResource ActionButtonStyle}"
                            Click="BtnOpenReservationCreation_Click"/>

                    <Button Content="Gérer les Paiements" 
                            x:Name="BtnOpenPaymentManagement"
                            Height="35" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Click="BtnOpenPaymentManagement_Click"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Configuration &amp; Inventaire" Margin="0,10,0,10" BorderBrush="#FFC107" FontWeight="SemiBold">
                <StackPanel Orientation="Vertical" Margin="10">

                    <Button x:Name="btnVehicleTypeManagement" 
                            Content="Gérer Types de Véhicules" 
                            Height="35" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Click="BtnVehicleTypeManagement_Click"/>

                    

                    <Button x:Name="btnVehicleManagement" 
                            Content="Gérer les Véhicules" 
                            Height="35" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Click="BtnVehicleManagement_Click"/>

                    <Button x:Name="btnCustomerManagement" 
                            Content="Gérer les Clients" 
                            Height="35" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Click="BtnCustomerManagement_Click"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Rapports &amp; Maintenance" Margin="0,10,0,10" BorderBrush="#4CAF50" FontWeight="SemiBold">
                <StackPanel Orientation="Vertical" Margin="10">
                    <Button x:Name="BtnOpenFinancialReports" 
                            Content="Rapports Financiers" 
                            Height="35" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Click="BtnOpenFinancialReports_Click"/>
                    <Button x:Name="BtnOpenMaintenanceManagement" 
                            Content="Planning de Maintenance" 
                            Height="35" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Click="BtnOpenMaintenanceManagement_Click"/>
                </StackPanel>
            </GroupBox>

        </StackPanel>

        <Border Grid.Column="1" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Padding="20" Background="#FFFFFF">
            <StackPanel>
                <TextBlock Text="Bienvenue dans l'Application de Gestion de Location de Voitures" 
                           FontSize="24" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,20"
                           Foreground="#333333"/>
                <TextBlock Text="Utilisez le menu à gauche pour accéder aux différentes fonctionnalités du système."
                           TextWrapping="Wrap"
                           FontSize="14"
                           Foreground="#666666"
                           Margin="0,0,0,30"/>

                <TextBlock Text="Statistiques Rapides :" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Margin="0,0,0,15"
                           Foreground="#007ACC"/>

                <ContentControl x:Name="MainDashboardContent" 
                                HorizontalAlignment="Stretch" 
                                VerticalAlignment="Stretch" 
                                Margin="0,10,0,0"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
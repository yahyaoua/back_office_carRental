<Window x:Class="CarRental.Desktop.WPF.VehicleManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Gestion des Véhicules (WPF)" Height="800" Width="1400">

    <Grid Margin="15">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Ligne 0: Champs de saisie -->
            <RowDefinition Height="*"/>
            <!-- Ligne 1: DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Ligne 2: Boutons CRUD -->
        </Grid.RowDefinitions>

        <!-- Ligne 0 : Champs de Saisie -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Colonne 1 : Infos de base -->
                <Label Grid.Row="0" Grid.Column="0" Content="Numéro de Plaque (PlateNumber) :" VerticalAlignment="Center"/>
                <TextBox x:Name="txtPlateNumber" Grid.Row="0" Grid.Column="1" Height="30" Margin="5"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Marque (Make) :" VerticalAlignment="Center"/>
                <TextBox x:Name="txtMake" Grid.Row="1" Grid.Column="1" Height="30" Margin="5"/>

                <Label Grid.Row="2" Grid.Column="0" Content="Modèle :" VerticalAlignment="Center"/>
                <TextBox x:Name="txtModel" Grid.Row="2" Grid.Column="1" Height="30" Margin="5"/>

                <Label Grid.Row="3" Grid.Column="0" Content="Année de Fabrication :" VerticalAlignment="Center"/>
                <TextBox x:Name="txtYear" Grid.Row="3" Grid.Column="1" Height="30" Margin="5"/>

                <Label Grid.Row="4" Grid.Column="0" Content="Type de Véhicule (FK) :" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbVehicleType" Grid.Row="4" Grid.Column="1" Height="30" Margin="5"
                          DisplayMemberPath="Name" 
                          SelectedValuePath="VehicleTypeId"
                          ToolTip="Sélectionnez le Type de Véhicule (nécessite d'avoir des types créés)"/>


                <!-- Colonne 2 : Infos détaillées (Kilométrage, Prix, Statut, Maintenance) -->
                <Label Grid.Row="0" Grid.Column="2" Content="Kilométrage Actuel (Mileage) :" VerticalAlignment="Center"/>
                <TextBox x:Name="txtMileage" Grid.Row="0" Grid.Column="3" Height="30" Margin="5"/>

                <Label Grid.Row="1" Grid.Column="2" Content="Prix Journalier de Base (BaseRate) :" VerticalAlignment="Center"/>
                <TextBox x:Name="txtBaseRatePerDay" Grid.Row="1" Grid.Column="3" Height="30" Margin="5" ToolTip="Entrez un montant décimal, ex: 50.00"/>

                <Label Grid.Row="2" Grid.Column="2" Content="Statut :" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbStatus" Grid.Row="2" Grid.Column="3" Height="30" Margin="5"
                          ToolTip="Statut du véhicule (ex: Available, Rented)"/>

                <Label Grid.Row="3" Grid.Column="2" Content="Date Proch. Maintenance :" VerticalAlignment="Center"/>
                <DatePicker x:Name="dpNextMaintenanceDate" Grid.Row="3" Grid.Column="3" Height="30" Margin="5"/>


            </Grid>
        </StackPanel>

        <!-- Ligne 1 : DataGrid -->
        <DataGrid x:Name="dgvVehicles" 
                  Grid.Row="1" 
                  AutoGenerateColumns="True" 
                  IsReadOnly="True" 
                  SelectionMode="Single"
                  Margin="0,0,0,15"
                  SelectionChanged="DgvVehicles_SelectionChanged"
                  AutoGeneratingColumn="DgvVehicles_AutoGeneratingColumn"/>

        <!-- Ligne 2 : Boutons CRUD -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnAdd" Content="Ajouter" Width="100" Margin="10,0" Click="BtnAdd_Click"/>
            <Button x:Name="btnUpdate" Content="Modifier" Width="100" Margin="10,0" Click="BtnUpdate_Click"/>
            <Button x:Name="btnDelete" Content="Supprimer" Width="100" Margin="10,0" Click="BtnDelete_Click"/>
            <Button x:Name="btnClear" Content="Effacer" Width="100" Margin="10,0" Click="BtnClear_Click"/>
        </StackPanel>

    </Grid>
</Window>